@page "/incident/cretae"
<h3>CreateIncident</h3>
@rendermode InteractiveServer

<EditForm OnValidSubmit="Submit" Model="IncidentModel">
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label>Category</label>
                <InputText class="form-control" @bind-Value="IncidentModel.Category"/>
                <ValidationMessage For="() => IncidentModel.Category"/>
            </div>
            <div class="col-md-6">
                <label>Description</label>
                <InputText class="form-control" @bind-Value="IncidentModel.Description" />
                <ValidationMessage For="() => IncidentModel.Description" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label>Comments</label>
                <InputText class="form-control" @bind-Value="IncidentModel.Comments" />
                <ValidationMessage For="() => IncidentModel.Comments" />
            </div>
            <div class="col-md-6">
                <label>Support User</label>
                <InputText class="form-control" @bind-Value="IncidentModel.SupportUser" />
                <ValidationMessage For="() => IncidentModel.SupportUser" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label>Status</label>
                <InputText class="form-control" @bind-Value="IncidentModel.Status" />
                <ValidationMessage For="() => IncidentModel.Status" />
            </div>
        </div>
        <button class="btn btn-secondary" type="submit">Save</button>
    </div>
</EditForm>
