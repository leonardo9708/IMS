@page "/incidents"
<h3>IndexIncident</h3>

@if (IncidentModels == null)
{
    <p>Loading...</p>
}
else
{
    <a class="btn btn-primary" href="/incident/cretae">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category</th>
                <th>Description</th>
                <th>Comments</th>
                <th>Support User</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var Incident in IncidentModels)
            {
                <tr>
                    <td>@Incident.Id</td>
                    <td>@Incident.Category</td>
                    <td>@Incident.Description</td>
                    <td>@Incident.Comments</td>
                    <td>@Incident.SupportUser</td>
                    <td>@Incident.Status</td>
                    <td>
                        <a class="btn btn-secondary" href="/incident/update/@Incident.Id">Update</a>
                        <button type="button" class="btn btn-danger" @onclick="()=> { DeleteId = Incident.Id; Modal.Open();}">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <AppModal @ref="Modal">
        <Title>Notification</Title>
        <Body>
            Do you sure want to delete this product?
        </Body>
        <Footer>
            <button type="button" class="btn btn-primary" style="width:80px" @onclick="Delete">Yes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Modal.Close()">Cancel</button>
        </Footer>
    </AppModal>
}
